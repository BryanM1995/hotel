<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Lista de Documentos</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
                <button class="btn btn-success" id="btnNuevo"><i class="fas fa-plus-circle"></i> Nueva Reserva</button>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>nombre</th>
                            <th>identificacion</th>
                            <th>Habitacion</th>
                            <th>ingreso</th>
                            <th>salida</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--  Modal-->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6>HOTELERIA</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" value="0" id="txtId">

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="cboProceso">Proceso</label>
                                    <select class="form-control js-example-basic-single" id="cboProceso" data-live-search="true" style="width:100% !important;">
                                    </select>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtcedula">Cedula</label>
                                    <input type="number" class="form-control form-control-sm" id="txtcedula" placeholder="Ingrese solo números">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtnombre">Nombre</label>
                                    <input type="text" class="form-control form-control-sm" id="txtnombre" placeholder="Ingrese solo letras" pattern="[A-Za-z]+" title="Solo letras permitidas">

                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtfini">Fecha de Ingreso</label>
                                    <input type="date" class="form-control form-control-sm" id="txtFechaini">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtffin">Fecha de salida</label>
                                    <input type="date" class="form-control form-control-sm" id="txtFechafin">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>



